.big_container {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-top: 20px; 
  width: 80%; 
  margin-left: auto; 
  margin-right: auto;
}

.flex_container {
  display: flex;
  justify-content: space-between;
  align-items :center;
  margin-bottom: 20px;
}

.temps_container {
  margin-right: 70px;
  border-radius: 16px;
  border: 2px solid rgba(2, 48, 71, 1);
  background: rgba(142, 202, 230, 0.34);
  font-size: 15px;
  margin-bottom: 20px;
  height: 30px;
  display: flex;
  align-items: center; 
  justify-content: center; 
  padding: 20px;
}
.barème_container {
  margin-left: 70px;
  border-radius: 16px;
  border: 2px solid rgba(2, 48, 71, 1);
  background: rgba(142, 202, 230, 0.34);
  font-size: 15px;
  margin-bottom: 20px;
  height: 30px;
  display: flex;
  align-items: center; 
  justify-content: center; 
  padding: 20px;
}

.temps_container span,
.barème_container span {
  margin-right: 10px; 
}

.Question_container {
  margin-top: 20px;
  width: 100%;
  max-width: 1100px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 30px;
}

.Question_container textarea {
  width: 100%;
  height: 150px; 
  padding: 10px;
  resize: vertical; 
  font-size: 20px; 
  line-height: 1.6; 
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

.Question_container textarea:focus {
  outline: none; 
  border-color: #007bff; 
}


.question-type {
  font-size: 20px; 
  color:black; 
  margin-bottom: 20px; 
  font-family:Montserrat;
}

input[type="radio"] {
  display: none;
}

.custom-radio {
  display: inline-block;
  cursor: pointer;
  margin-right: 50px;
}

.custom-radio input[type="radio"] + label {
  display: inline-block;
  width: 100px; 
  height: 40px; 
  background-color: #ffffff; 
  border: 2px solid #023047; 
  border-radius: 9px; 
  text-align: center;
  line-height: 32px; 
}

.custom-radio input[type="radio"] + label::after {
  content: attr(data-label); 
  display: block;
}

.custom-radio input[type="radio"]:checked + label {
  background-color: #023047; 
  color:white; 
}




